rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - only the user can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Companies collection - linked to user
    match /companies/{companyId} {
      allow read: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
    // Jobs collection - nested under companies
    match /companies/{companyId}/jobs/{jobId} {
      allow read, write: if isAuthenticated();
    }
    
    // Candidates collection - nested under companies
    match /companies/{companyId}/candidates/{candidateId} {
      allow read, write: if isAuthenticated();
    }
    
    // Admin collection - restricted
    match /admin/{document=**} {
      allow read, write: if false; // Only Cloud Functions can access
    }
  }
}
